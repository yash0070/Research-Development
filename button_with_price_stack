// Button 

class CustomPriceWidget extends StatelessWidget {
  final String iconImage;
  final VoidCallback onTap;
  final Widget priceWidget;
  const CustomPriceWidget({super.key,
    required this.iconImage,
    required this.onTap,
    required this.priceWidget,
  });
  @override
  Widget build(BuildContext context) {
    return InkWell(
      onTap: onTap,
      child: SizedBox(
       // color: Colors.red,
        height: 43.h,
        width: 52.w,
        child: Stack(
          children: [

            /// Container box
            Positioned(
              bottom: 1,
              child: Container(
                height: 27.h,
                width: 52.w,
                decoration: BoxDecoration(
                  border: Border.all(color:const Color(0xFFE62375),width: 0.7),
                  borderRadius: BorderRadius.circular(10),
                ),
              ),
            ),

            /// Price texts or Icon Image
            Positioned(
              bottom: 5.h,
              right: 0,left: 0,
              child: Align(
                alignment: Alignment.center,
                child: Padding(
                  padding: const EdgeInsets.all(3.0),
                  child: Container(
                    color: Colors.white,
                    padding:const EdgeInsets.symmetric(horizontal: 2),
                    child: Column(
                      crossAxisAlignment: CrossAxisAlignment.center,
                      children: [
                        /// Shows the price or free
                        priceWidget,
                        SizedBox(height: 2.h),

                        /// Icons images
                        VImage(iconImage,
                              height: 12.h, color: const Color(0xFFE62375)),
                        ],
                    )
                ),
                ),
              ),
            )
          ],
        ),
      ),
    );
  }
}

